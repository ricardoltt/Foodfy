{% extends 'layout.njk' %}

{% block content %}

    <section class="cards">

        {% for item in items %}

        <div class="card" id="{{items.indexOf(item)}}">
            <div class="card_img-container">
                <img src="{{item.image}}" alt="Imagem de {{item.title}}">
            </div>
            <div class="card_content">
                <p>{{item.title}}</p>
            </div>
            <div class="card_info">
                <p>por {{item.author}}</p>
            </div>
        </div>

        {% endfor %}
    </section>

    <script src="scripts.js"></script>

    {% endblock %}
